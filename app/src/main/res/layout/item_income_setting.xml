<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/border_setting">
    <ImageView
        android:id="@+id/btnDel"
        android:layout_centerVertical="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/delete"/>
    <LinearLayout
        android:id="@+id/bgIcon"
        android:layout_toRightOf="@id/btnDel"
        android:layout_marginHorizontal="20dp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_image_unselect">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/awards"/>
    </LinearLayout>
    <TextView
        android:id="@+id/name"
        android:layout_toRightOf="@id/bgIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Awards"
        android:textSize="14dp"
        android:textColor="#000"/>

</RelativeLayout>